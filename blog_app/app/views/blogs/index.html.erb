
<% if user_signed_in? %>
<p><%=current_user.username %> is logged in </p>
<% end %>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>

<% @blogs.each do |blog| %>
	<h1><%= blog.headline %></h1>
	<img src="<%= blog.img_url %>">
	<p><%= blog.content %></p>
<% end %>